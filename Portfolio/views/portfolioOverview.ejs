<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Portfolios</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

  <%- include("partials/sidebar") %>

  <main class="content">
    <h1>My Portfolios</h1>

    <% if (portfolios.length === 0) { %>
      <p>You don't have any portfolios yet.</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Portfolio Name</th>
            <th>Account ID</th>
            <th>Created</th>
            <th>Details</th>
          </tr>
        </thead>
        <tbody>
          <% portfolios.forEach(portfolio => { %>
            <tr>
              <td><%= portfolio.portfolioName %></td>
              <td><%= portfolio.accountID %></td>
              <td><%= new Date(portfolio.registrationDate).toLocaleDateString() %></td>
              <td>
                <a href="/portfolio/<%= portfolio.portfolioID %>">View</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>

    <div class="create-button">
      <a href="/portfolio/create">+ Create New Portfolio</a>
    </div>
  </main>

</body>
</html>
