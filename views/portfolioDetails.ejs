<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
<link rel="stylesheet" href="/dashboard.css">

<body>
  <%- include('./partials/nav.ejs') %>

  <div class="container">

    <h1>Portfolio: <%= portfolio.portfolioName %></h1>
    <p><strong>Account ID:</strong> <%= portfolio.accountID %></p>
    <p><strong>Created:</strong> <%= new Date(portfolio.registrationDate).toLocaleDateString() %></p>

    <h2>Holdings</h2>
    <% if (holdings.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>Stock ID</th>
            <th>GAK</th>
            <th>Expected Value</th>
            <th>Unrealized Gain</th>
            <th>Details</th>
          </tr>
        </thead>
        <tbody>
          <% holdings.forEach(stock => { %>
            <tr>
              <td><%= stock.stockID %></td>
              <td><%= stock.gak ? stock.gak.toFixed(2) : "N/A" %></td>
              <td><%= stock.expectedValue ? stock.expectedValue.toFixed(2) : "N/A" %></td>
              <td><%= stock.unrealizedGain ? stock.unrealizedGain.toFixed(2) : "N/A" %></td>
              <td>
                <a href="/portfolioAnalysis/<%= portfolio.portfolioID %>/<%= stock.stockID %>">Analyze</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>This portfolio does not contain any stocks yet.</p>
    <% } %>

    <br>
    <a href="/portfolio" class="btn">‚Üê Back to My Portfolios</a>
  </div>
</body>
</html>
