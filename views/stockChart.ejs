<!--shows stock chart on website-->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= ticker %> Stock Chart</title>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> <!-- Import Chart.js -->
</head>

<body style="background-color: #121212; color: white;">

    <h1 style="text-align: center; margin-top: 30px;"><%= ticker %> Stock Price Chart</h1>

    <div style="max-width: 800px; margin: auto; padding: 20px;">
        <canvas id="myChart" data-ticker="<%= ticker %>" width="800" height="400"></canvas>
    </div>

    <script src="/js/stockChart.js"></script> <!-- Dit JS -->
</body>

</body>
</html>