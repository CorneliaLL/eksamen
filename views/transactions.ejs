<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

<!-- Link til dashboard CSS -->
<link rel="stylesheet" href="/dashboard.css">

<body>
  <div class="layout">
  <!-- main content -->
  <%- include('./partials/nav.ejs') %>

  <div class="container">
    <div class="containerTitle">
      <h1>Transactions Overview</h1>
    </div>

    <div class="boxContainer">
      <div class="box1">
        <h2>Transaction History</h2>

        <% if (transactions && transactions.length > 0) { %>
          <div class="tableContainer">
            <table>
              <thead>
                <tr>
                  <th>Transaction ID</th>
                  <th>Trade ID</th>
                  <th>Amount</th>
                  <th>currency</th>
                  <th>Date</th>
                  <th>Ticker</th>
                  <th>Trade Type</th>
                  <th>Balance</th>
                </tr>
              </thead>
              <tbody>
              <!-- Create a variable directly that shows the change in balance for each transaction -->
                <% 
                    let updatedBalance = account.balance; // start med nuværende saldo
                %>
                <% transactions.forEach(transaction => { %>
                  <% 
                    updatedBalance -= transaction.amount; // træk beløbet fra for at vise saldo før transaktionen
                  %>
                  <tr>
                    <td><%= transaction.transactionID %></td>
                    <td><%= transaction.tradeID %></td>
                    <td><%= transaction.amount ? transaction.amount.toFixed(2) : "N/A" %></td>
                    <td><%= account.currency %></td>
                    <td><%= new Date(transaction.transactionDate).toLocaleString() %></td>
                    <td><%= transaction.Ticker %></td>
                    <td><%= transaction.tradeType %></td>
                    <td><%= updatedBalance.toFixed(2) %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p>No transactions found for this account.</p>
        <% } %>

      </div>
    </div>

    <a href="/account" class="btn">← Back to Accounts</a>
  </div>
</div>
</body>
</html>
