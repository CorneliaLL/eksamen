<html lang="en">
  <%- include('./partials/head.ejs') %>
  <link rel="stylesheet" href="/style.css">
  <body>
    <div class="layout"> <!-- Wrapper til hele layoutet -->
    <div class="container">
      <h2>Change Password</h2>
      <!--Tilføjer en formular hvor brugeren kan indtaste username, gamle password og nyt password-->
      <!--Submit-knappen sender indtastede værdier-->
      <form action="/user/change-password" method="POST">
        <input type="text" name="username" placeholder="Username" required />
        <input type="password" name="oldPassword" placeholder="Old password" required />
        <input type="password" name="newPassword" placeholder="New password" required />
        <button type="submit">Change Password</button>
      </form>
      <!--Link til at trykke tilbage til login-siden -->
      <p><a href="/" class="back-link">Back to login</a></p>
    </div>
    </div>
  </body>
</html>
