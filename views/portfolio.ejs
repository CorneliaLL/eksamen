<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
<link rel="stylesheet" href="/dashboard.css">

<body>
  <%- include('./partials/nav.ejs') %>

  <div class="container">
  <div class="portfolioContainer">
    <h1>Portfolio: <%= portfolio.portfolioName %></h1>
    <p><strong>Account ID:</strong> <%= parseInt(portfolio.accountID) %></p>
    <p><strong>Created:</strong> <%= new Date(portfolio.registrationDate).toLocaleDateString() %></p>

    <p><strong>Acquisition price:</strong> <%= acquisitionPrice %> kr</p>
    <p><strong>Expected value:</strong> <%= totalExpectedValue %> kr</p>
    <p><strong>Unrealized gain:</strong> <%= totalUnrealizedGain %> kr</p>
    
    <h2>Holdings</h2>
    <% if (typeof holdings !== 'undefined' && holdings.length > 0) { %>
    <div class="tableContainer"> 
      <table>
        <thead>
          <tr>
            <th>Stock ID</th>
            <th>GAK</th>
            <th>Expected Value</th>
            <th>Unrealized Gain</th>
            <th>Details</th>
          </tr>
        </thead>
        <tbody>
          <% holdings.forEach(stock => { %>
            <tr>
              <td><%= stock.stockID %></td>
              <td><%= stock.gak ? stock.gak.toFixed(2) : "N/A" %></td>
              <td><%= stock.expectedValue ? stock.expectedValue.toFixed(2) : "N/A" %></td>
              <td><%= stock.unrealizedGain ? stock.unrealizedGain.toFixed(2) : "N/A" %></td>
              <td>
                <a href="/portfolioAnalysis/<%= portfolio.portfolioID %>/<%= stock.stockID %>">Analyze</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div> 
    <% } else { %>
      <p>This portfolio does not contain any stocks yet.</p>
    <% } %>
  </div>
    <a href="/account/<%= account.accountID %>" class="btn">‚Üê Back to my portfolios</a>
    <a href="/transactions/<%= portfolio.accountID %>" class="btn">View Transactions</a>
    <a href="/trade/:portfolioID/:accountID" class="btn">Trade Stock</a>
  </div>
</body>
</html>