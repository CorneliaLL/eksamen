<html lang="en">
<%- include ('./partials/head.ejs') %>

<!--link to dashboard stylesheet-->
<link rel="stylesheet" href="/dashboard.css">

<body>
      
    <!--main content-->
    <%- include ('./partials/nav.ejs') %>
    <div class="container">
    <div class="containerTitle">
        <h1>Account: <%= account.accountName %> </h1> <!--gets username from database-->
    </div>
    <div class="boxContainer">
      <div class="createPortfolio">
        <a href="/createPortfolio">Create portfolio!</a>
      </div>
    <div class="valueandprice">
    <div class="totalValue">
      <h3>Total value in <%= account.currency %></h3>
    </div>
    <div class="priceChange">
      <h3>price change</h3>
    </div>
    </div>
    <div class="piechart">
      <!--INSERT CHART HERE-->
      <h3>Pie chart</h3>
    </div>
    <div class="balance">
      <h3> Balance: <%= account.balance.toFixed(2) %> <%= account.currency %> </h3>
      <div class="updateBalance">
      <form action="/account/<%= account.accountID %>/transaction" method="POST">
          <label for="amount">Select amount:</label>
          <input type="number" name="amount" id="amount" step="0.01" required />

          <label for="type">Transaction type:</label>
          <select name="type" id="type" required>
            <option value="deposit">Deposit</option>
            <option value="withdrawal">Withdraw</option>
          </select>
        <button type="submit">Update balance</button>
      </form>
    </div>
    </div>
    <div class="portfolioList">
      <h2>My portfolios</h2>
      <div class="tableContainer">
        <table>
          <thead>
            <tr>
              <th>Portfolio Name</th>
              <th>Account name</th>
              <th>Created</th>
              <th>Details</th>
            </tr>
          </thead>
          <tbody>
            <% if (portfolios.length > 0) { %>
              <% portfolios.forEach(portfolio => { %>
                <tr>
                  <td><%= portfolio.portfolioName %></td>
                  <td><%= portfolio.accountName %></td>
                  <td><%= new Date(portfolio.registrationDate).toLocaleDateString() %></td>
                  <td>
                    <a href="/portfolio/<%= portfolio.portfolioID %>/<%= account.accountID %>">View</a>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <p>No portfolios found.</p>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    </div>
    </div>
    
</body>

</html>